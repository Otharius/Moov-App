<!--Faire la liste des séances et qd on clique dessus on a le récapitulatif de la séance comme seance.ejs-->

<div class="top_content"><br><br>
    <a href="/workout/training" style="margin-left: 10px; margin-top:40px; color: white; text-align: left; width: 2%;" ><i class="fa-solid fa-arrow-left-long fa-2xl"></i></a>
    <h1 class="seance_name" style="width: 98%; margin-right: 2%;">Les séances</h1><br>
</div>

<br>

<table class="seances_table" style="border-collapse: collapse; border: 1px solid black;">

    <% for(var i=0; i < userData.workout.seances.length; i++) { %>

        <tr>
            <td style="border-collapse: collapse;"><a href="/workout/seance?id=<%=i + 1%>&page=allSeances" class="link_seance"><%= userData.workout.seances[i].name %></a></td>

            <% if (userData.workout.seances[i].done === false) { %>
                <td>Séance non terminée</td>
            <% } %>

            <% if (userData.workout.seances[i].done == true && userData.workout.seances[i].difficulty === null) { %>
                <td>Etat de forme non complété</td>
            <% } %>

            <% if (userData.workout.seances[i].done == true && userData.workout.seances[i].difficulty != null) { %>
                <td style="border-collapse: collapse; margin-left: 50px;">Difficulté: <%= userData.workout.seances[i].difficulty %></td>
            <% } %>
        </tr>
    
    <% } %>

</table>
