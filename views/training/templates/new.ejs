<h1>Nouveau templates</h1>

<%= fields %>
<form action="/template/newTemplate" method="POST">

    <input type="text" name="name" required> Nom: <br>
    

    <% if (fields != null) { %>
        <% for(var j=0; i < fields.length; j++) { %>
            <p><%=fields[j]%></p>
        <% } %>
    <% } %>
    

    <button>Valider</button>

</form>

<hr style="width: 80%;">

<form action="/template/newField" method="POST">

    <select name="field">
        
        <% for(var i=0; i < dataFields.length; i++) { %>

            <option value="<%=dataFields[i]%>"><%=dataFields[i] %></option>

        <% } %>

    </select>

    <button>Valider</button>

</form>


<% if (template) { %>
    <% var b = Object.keys(userData.templates) %>
    <table>
        <% for(var k=0; k < b.length; k++) { %>
    
            <tr>
                <td><%= b[k] %></td>
                <td class="exerciceDelete"><a href="/template/deleteTemplate?template=<%=b[k]%>"><i name="test" class="fa-solid fa-trash-can trash"></i></a></td>
            </tr>
    
        <% } %>
    </table>
<% } %>
