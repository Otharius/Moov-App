
<div class="top_group"><br><br>
    <a href="/home/group" style="margin-left: 10px; margin-top:40px; color: white; text-align: left; width: 2%;"><i class="fa-solid fa-arrow-left-long fa-2xl"></i></a>
    <h1 class="seance_name" style="width: 98%; margin-right: 2%;"><%= viewUser.pseudo%></h1><br>
</div>

<br>

<% groups.rights.rights.forEach(function(right) { %>
    
    <% if(right.pseudo === user.pseudo) { %>

        <% if (right.admin === true) { %>

            <table class="users_group" style="width: 100%;">
                <% groups.rights.rights.forEach(function(right) { %>

                    <% if (right.pseudo === viewUser.pseudo) { %>

                        <div class="group_user_info">   
                            <tr>
                                <td class="group_coatch">
                                    <% if (right.coatch === false) { %>
                                        <a href="/home/grantCoatch?pseudo=<%=right.pseudo%>">Promouvoir entraineur</a>
                                    <% } %>
                                    <% if (right.coatch === true) { %>
                                        <a href="/home/denyCoatch?pseudo=<%=right.pseudo%>">Enlever entraineur</a>
                                    <% } %>
                                </td>
        
                                <td class="group_coatch">
                                    <% if (right.trainee === false) { %>
                                        <a href="/home/grantTrainee?pseudo=<%=right.pseudo%>">Promouvoir sportif</a>
                                    <% } %>
                                    <% if (right.trainee === true) { %>
                                        <a href="/home/denyTrainee?pseudo=<%=right.pseudo%>">Enlever sportif</a>
                                    <% } %>
                                </td>
        
                                <td class="group_coatch">
                                    <% if (right.admin === false) { %>
                                        <a href="/home/grantAdmin?pseudo=<%=right.pseudo%>">Promouvoir admin</a>
                                    <% } %>
                                </td>
        
                                <td class="group_sack">
                                    <% if (right.admin === false) { %>
                                        <a href="/home/exclude?pseudo=<%=right.pseudo%>" class="sack_user">Exclure</a>
                                    <% } %>
                                </td>
                            </tr>
                        </div>
                        
                    <% } %>
                    
                <% }); %>
            </table>

        <% } %>

        <div class="user_group_content">
            <p>Nom: <%= viewUser.name %></p>
            <p>Pr√©nom: <%= viewUser.firstname %></p>
            <p>Email: <a href="mailto:<%= viewUser.email %>"><%= viewUser.email %></a></p>
        </div>

    <% } %>

<% }); %>
